    // }
}
<h3>List Slider</h3>
<a asp-action="Create" asp-controller="Slider" class="btn btn-primary">Add</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Description</th>          
            <th scope="col">Status</th>
            <th scope="col">Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td><img src="~/media/sliders/@item.Image" width="400" height="200" /></td>
                <td>@Html.Raw(@item.Description)</td>              
                <td>
                    @if (item.Status == 1)
                    {
                        <span>Hiện</span>
                    }
                    else
                    {
                        <span>Ẩn</span>
                    }
                </td>
                <td>
                    <a class="btn btn-success btn-sm" asp-action="Edit" asp-controller="Slider" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Slider" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
