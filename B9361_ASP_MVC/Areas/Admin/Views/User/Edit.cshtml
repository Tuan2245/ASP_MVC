@model AppUserModel
@{
    ViewData["title"] = "Edit User";
}
<h4>Edit User</h4>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="PasswordHash" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>UserName</label>
            <input asp-for="UserName" class="form-control" required />
            <span asp-validation-for="UserName" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger" />
        </div>
       @*  <div class="form-group">
            <label>Password</label>
            <input asp-for="PasswordHash" class="form-control" required type="password" />
            <span asp-validation-for="PasswordHash" class="text-danger" />
        </div> *@
        <div class="form-group">
            <label>Roles</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
            </select>
            <span asp-validation-for="RoleId" class="text-danger" />
        </div>
        <div class="form-group">
            <button class="btn btn-success">Edit</button>
        </div>
    </form>
    <a asp-action="Index">Back to</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
